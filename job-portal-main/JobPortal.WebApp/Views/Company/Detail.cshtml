@model JobPortal.Data.Entities.AppUser
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http
@inject SignInManager<AppUser> signInManager
@inject UserManager<AppUser> userManager

@{
    var user = await userManager.GetUserAsync(User);
    Layout = "_Layout";
}

<!-- Bắt đầu khu vực banner -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    @Model.FullName
                </h1>
                <p class="text-white link-nav">
                    <a href="/">Trang chủ </a>
                    <span class="lnr lnr-arrow-right"></span>
                    <a href="#"> Giới thiệu công ty</a>
                </p>
            </div>
        </div>
    </div>
</section>
<!-- Kết thúc khu vực banner -->
<!-- Bắt đầu khu vực bài đăng blog -->
<section class="blog-posts-area section-gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 post-list blog-post-list">
                <div class="single-post">
                    <img class="img-fluid" src="https://localhost:7211/images/employers/@Model.UrlAvatar" alt="logo">
                    <hr />
                    <h3 style="text-align: center; margin-top: 10px; margin-bottom: 5px">@Model.FullName</h3>
                    <ul class="cat-list">
                        @if (ViewBag.CountJob == 1)
                        {
                            <li class="col-xs-12 col-4"><a href="/job?slug=@Model.Slug">@ViewBag.CountJob công việc đang mở</a></li>
                        }
                        else if (ViewBag.CountJob > 1)
                        {
                            <li class="col-xs-12 col-4"><a href="/job?slug=@Model.Slug">@ViewBag.CountJob công việc đang mở</a></li>
                        }
                    </ul>
                    <ul class="tags">
                        <li><a target="_blank" href="https://@Model.WebsiteURL/">@Model.WebsiteURL</a></li> - Thành lập: @Model.CreateDate -
                        <img width="30" height="20" src="https://localhost:7211/images/countries/@Model.Country.Flag" alt="cờ"> @Model.Country.Name
                    </ul>
                    <div class="content-wrap">
                        <h6>Giới thiệu công ty:</h6>
                        <blockquote class="generic-blockquote">
                            <p>@Html.Raw(Model.Description)</p>
                            <p>@Html.Raw(Model.Content)</p>
                        </blockquote>

                        <h6>Địa chỉ:</h6>
                        <p>@Html.Raw(Model.Location)</p>

                        <h6>Quy mô công ty:</h6>
                        <p>@Html.Raw(Model.CompanySize)</p>

                        <h6>Ngày làm việc:</h6>
                        <p>@Html.Raw(Model.WorkingDays)</p>

                        <h6>Tỉnh/Thành phố:</h6>
                        <p>@Html.Raw(Model.Province.Name)</p>

                        <h6>Liên hệ:</h6>
                        <p>@Html.Raw(Model.Contact)</p>
                    </div>
                    <hr />
                    <div class="bottom-meta">
                        <div class="user-details row align-items-center">
                            <div class="comment-wrap col-lg-6 col-sm-6">
                                @*<ul>
                                <li><a href="#"><span class="lnr lnr-heart"></span>	4 lượt thích</a></li>
                                <li><a href="#"><span class="lnr lnr-bubble"></span> 06 Bình luận</a></li>
                                </ul>*@
                            </div>
                            <div class="social-wrap col-lg-6">
                                <ul>
                                    <li><a href="https://facebook.com/"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="https://twitter.com/"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="https://dribbble.com/"><i class="fa fa-dribbble"></i></a></li>
                                    <li><a href="https://behance.net/"><i class="fa fa-behance"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Thanh bên -->
            @Html.Partial("../Shared/_SidebarPartial.cshtml")

        </div>
    </div>
</section>
<!-- Kết thúc khu vực bài đăng blog -->
