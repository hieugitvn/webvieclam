<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row search-page-top d-flex align-items-center justify-content-center">
            <div class="banner-content col-lg-12">
                <h1 class="text-white">
                    <span>@jobCount+</span> Công việc đăng trong tuần qua
                </h1>
                <!-- Ô tìm kiếm -->
                @Html.Partial("../Shared/_SearchBoxPartial.cshtml")
                <p style="font-size: 20px" class="text-white"> <span>Tìm kiếm theo các thẻ:</span> Developer, Engineer, Technology, Support, Manager, Senior, Junior</p>
            </div>
        </div>
    </div>
</section>
<!-- Kết thúc khu vực banner -->
<!-- Phân loại -->
