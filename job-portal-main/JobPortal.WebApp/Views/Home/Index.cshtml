@model IEnumerable<JobPortal.Data.Entities.Job>

@{
    Layout = "_Layout";

    // Công việc được đăng trong tuần qua
    DateTime lastWeek = DateTime.Now.AddDays(-7); // lấy thời gian 7 ngày trước
    byte jobCount = (byte)Model.Count(j => j.CreateDate >= lastWeek); // đếm số lượng công việc trong khoảng thời gian
}

